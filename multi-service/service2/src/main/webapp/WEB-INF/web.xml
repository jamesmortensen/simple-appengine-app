<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.loosebazooka.test.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConsultantServlet</servlet-name>
        <servlet-class>com.loosebazooka.test.ConsultantServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultantServlet</servlet-name>
        <url-pattern>/consultant</url-pattern>
    </servlet-mapping>

    <!-- JDO-service -->
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>com.sample.EmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GuestReaderServlet</servlet-name>
        <servlet-class>com.loosebazooka.test.GuestReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GuestReaderServlet</servlet-name>
        <url-pattern>/guest</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
